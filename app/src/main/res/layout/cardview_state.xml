<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="2dp"
    android:background="#f0f0f0"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_imageState"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="TODO" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_statePosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="1ยบ"
                android:textStyle="bold"
                android:textColor="#1d1d1d"/>

            <TextView
                android:id="@+id/textView_stateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="@string/sao_paulo"
                android:textStyle="bold"
                android:textColor="#1d1d1d" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_demography"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/zero"
            android:textColor="#1d1d1d" />

        <TextView
            android:id="@+id/textView_graduatedNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/zero"
            android:textSize="10sp"
            android:textColor="#1d1d1d" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Toque p/ ver as universidades"
            android:textSize="10sp"
            android:textColor="#1d1d1d" />
    </LinearLayout>

</LinearLayout>