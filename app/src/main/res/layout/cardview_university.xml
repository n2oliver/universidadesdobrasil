<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="2dp"
    android:background="#f0f0f0"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_imageUniversity"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="TODO" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_universityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="University name"
            android:textColor="#1d1d1d"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_universityNeighborhood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="University Neighborhood"
            android:textColor="#1d1d1d" />

        <TextView
            android:id="@+id/textView_universityCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="University City"
            android:textColor="#1d1d1d"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView_universityCep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="000000-000"
            android:textColor="#1d1d1d"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView_universityPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="(xx) xxxx-xxxx"
            android:textColor="#1d1d1d"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>