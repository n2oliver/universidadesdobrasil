<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="2dp"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_imageUniversity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:scaleType="centerCrop"
        android:contentDescription="TODO" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_universityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="University name"
            android:textIsSelectable="true"
            android:textStyle="bold"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/textView_universityNeighborhood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="University Neighborhood"
            android:textIsSelectable="true"
            android:textSize="14sp"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/textView_universityNetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="University network"
            android:textIsSelectable="true"
            android:textSize="12sp"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/textView_universityCep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="000000-000"
            android:textIsSelectable="true"
            android:textSize="12sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/textView_universityPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="(xx) xxxx-xxxx"
            android:textIsSelectable="true"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>