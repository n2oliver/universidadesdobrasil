<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:targetSandboxVersion="1"
    package="com.olivercastilho.universidadesdobrasil">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ub_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ub_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".presentation.tips.TipsActivity"></activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2100499132829579~3564299129" />

        <activity android:name=".presentation.websearch.WebSearchActivity" />
        <activity
            android:name=".presentation.intro.IntroActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.landing.LandingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.states.StatesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.universities.UniversitiesActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>