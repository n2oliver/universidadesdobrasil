<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.olivercastilho.universidadesdobrasil">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ub_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ub_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".presentation.intro.IntroActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.landing.LandingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".presentation.states.StatesActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".presentation.universities.UniversitiesActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>